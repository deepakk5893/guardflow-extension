{
  "name": "guardflow-extension",
  "version": "1.0.0",
  "description": "Prevent accidental secret leaks to ChatGPT, Claude, and other AI services",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && cd dist && zip -r ../guardflow-extension.zip .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "security",
    "ai",
    "chatgpt",
    "claude",
    "secret-detection",
    "chrome-extension"
  ],
  "author": "Guardflow",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.394.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3",
    "vite": "^6.3.6",
    "@crxjs/vite-plugin": "^2.0.0-beta.21"
  }
}
